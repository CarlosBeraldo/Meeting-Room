<% if user_signed_in? %>
  <h1>Meetings</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Start date</th>
        <th>Start time</th>
        <th>Description</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @meetings.each do |meeting| %>
        <%# if meeting.user == current_user%>
          <tr>
            <td><%= meeting.start_date %></td>
            <td><%= meeting.start_time.strftime("%H:%M") %></td>
            <td><%= meeting.description %></td>
            <td><%= link_to 'Show', meeting %></td>
            <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
            <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <%# end %>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Meeting', new_meeting_path %>
  <%= render "calendar", meetings: @meetings %>

<% else %>
  <h1>Home page</h1>
<% end %>



