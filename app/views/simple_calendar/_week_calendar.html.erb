<% reunioes = @meetings.select("meetings.id,meetings.description,meetings.start_date,meetings.start_time,users.username").joins(:user)%>

<div class="">
  <div class="">
    <%= link_to t('simple_calendar.previous', default: 'Voltar'), calendar.url_for_previous_view %>
    <span><%= t('date.month_names')[start_date.month] %><%= t('simple_calendar.week', default: ' Semana') %> <%= calendar.week_number %></span>
    <%= link_to t('simple_calendar.next', default: 'Proximo'), calendar.url_for_next_view%>
  </div>

  <table class="table table-info">
    <thead>
      <tr>
        <th>Horario</th>
        <th>Segunda-Feira</th>
        <th>Terça-Feira</th>
        <th>Quarta-Feira</th>
        <th>Quinta-Feira</th>
        <th>Sexta-Feira</th>
      </tr>
    </thead>
    <tbody>
      <td></td>
      <% date_range.each_slice(7) do |week| %>
        <% week.pop(2) %>

        <% week.each do |day| %>
          <%= content_tag :td, class: calendar.td_classes_for(day) do %>
            <%= day.strftime("%d/%m/%Y") %>
          <% end %>
        <% end %>

        <% 6.upto(23).each do |hour| %>
          <tr>
            <td>
              <%= Time.parse("#{hour}:00").strftime("%H:%M") %>
            </td>                    
            
            <% week.each do |day| %>
              <td>               
                  <% temReuniaoNoDiaNaHora = false %>

                  <% reunioes.each do |reuniao| %>

                    <%if day == reuniao.start_date && hour == reuniao.start_time.strftime("%H").to_i%>
                      <div>
                        Criado por: <strong><%= link_to reuniao.username, reuniao %></strong> | <%= link_to 'Apagar', reuniao, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %>
                      </div>
                      <% temReuniaoNoDiaNaHora = true %>
                    <% end %>

                  <% end %>
                  
                  <% if !temReuniaoNoDiaNaHora %>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%=day%><%=hour%>">
                      Disponivel
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal<%=day%><%=hour%>" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                  <h5 class="modal-title">Crie sua Reunião</h5>
                              </div>
                              <div class="modal-body">
                                  <%= render 'formModal', {meeting: @meeting,date: day.strftime("%F"),time: hour.to_s } %>               
                              </div>
                              <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              </div>
                            </div>
                        </div>
                    </div>
                    
                  <% end %>
                  
              </td>
            <% end %>
            
          </tr>      
        <% end %>

      <% end %>
    </tbody>
  </table>
</div>
