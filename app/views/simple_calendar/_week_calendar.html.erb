<% reunioes = @meetings.select("meetings.id,meetings.description,meetings.start_date,meetings.start_time,users.username").joins(:user)%>

<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= t('date.month_names')[start_date.month] %><%= t('simple_calendar.week', default: ' Week') %> <%= calendar.week_number %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Horario</th> 
        <% date_range.slice(0, 5).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <td></td>
      <% date_range.each_slice(7) do |week| %>
        <% week.pop(2) %>

        <% week.each do |day| %>
          <%= content_tag :td, class: calendar.td_classes_for(day) do %>
            <%= day %>
          <% end %>
        <% end %>

        <% 6.upto(23).each do |hour| %>
          <tr>
            <td>
              <%= Time.parse("#{hour}:00").strftime("%H:%M") %>
            </td>                    
            
            <% week.each do |day| %>
              <td>               
                  <% temReuniaoNoDiaNaHora = false %>

                  <% reunioes.each do |reuniao| %>

                    <%if day == reuniao.start_date && hour == reuniao.start_time.strftime("%H").to_i%>
                      <div>
                        Criado por: <strong><%= link_to reuniao.username, reuniao %></strong> | <%= link_to 'Apagar', reuniao, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                      <% temReuniaoNoDiaNaHora = true %>
                    <% end %>

                  <% end %>
                  
                  <% if !temReuniaoNoDiaNaHora %>
                    <%= link_to 'Disponivel', new_meeting_path(start_date: day, start_time: "#{hour}:00") %>
                  <% end %>
                  
              </td>
            <% end %>
            
          </tr>      
        <% end %>

      <% end %>
    </tbody>
  </table>
</div>
